<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZoomUnitel" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/orange_unitel</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:windowDisablePreview">true</item>

        <!-- Customize your theme here. -->
        <!-- Applying the new style that is defined below  -->
        <item name="actionBarStyle">@style/MyActionBarDarkStyle</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="Theme.ZoomUnitel.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:fontFamily">@font/poppins_medium</item>

    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <!-- Our new style for ActionBar -->
    <style name="MyActionBarDarkStyle" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="background">@color/orange_unitel</item>
    </style>

    <style name="Theme.ZoomUnitel.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.ZoomUnitel.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
</resources>