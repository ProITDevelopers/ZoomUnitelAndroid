<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Container GRAY rectangle -->
    <item>
        <shape android:shape="rectangle">

            <size
                android:width="276dp"
                android:height="276dp" />

            <solid
                android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- Top WHITE oval shape -->
    <item
        android:left="-300dp"
        android:right="-80dp"
        android:top="-50dp"
        android:bottom="15dp"
        >

        <shape android:shape="oval">

            <solid
                android:color="@color/orange_unitel" />
        </shape>
    </item>

    <item
        android:top="-250dp"
        android:bottom="150dp"
        >

        <shape android:shape="rectangle">

            <solid
                android:color="@color/orange_unitel" />
        </shape>
    </item>
</layer-list>
