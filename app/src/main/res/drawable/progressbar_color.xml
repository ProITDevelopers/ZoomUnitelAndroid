<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:angle="270"
                android:centerColor="#ffb5b5b5"
                android:centerY="0.75"
                android:endColor="#ffb5b5b5"
                android:startColor="#ffb5b5b5" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/blue_unitel"
                    android:centerY="0.75"
                    android:endColor="@color/blue_unitel"
                    android:startColor="@color/blue_unitel" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:endColor="@color/orange_unitel"
                    android:startColor="@color/orange_unitel" />
            </shape>
        </clip>
    </item>

</layer-list>